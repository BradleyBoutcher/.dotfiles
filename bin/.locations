#!/bin/bash 

# These locations are all relative to the location
# of $STORE.

# Project store for dotfiles 
STORE="../store"

# Storage directories 
PROJECTS="$STORE/Workspace/Projects"
ZSH="$STORE/.oh-my-zsh"
DOTFILES="$STORE/.dotfiles"

# Top-level directory prefixes
LISTS="$DOTFILES/lists"
SOURCABLES="$DOTFILES/sourcables" 
RCS="$DOTFILES/rcs"
SSH_DIR="$STORE/.ssh"
CONFIGS="$STORE/configs"

# config storage folders
GIT_CONFIGS="${CONFIGS}/.git"
SSH_CONFIGS="${CONFIGS}/.ssh"

# List files
BREWS="${LISTS}/.brew"
CASKS="${LISTS}/.brew_casks"
ZSH_PLGUINS="${LISTS}/.zsh_plugins"
LOCATIONS="${LISTS}/.locations"

# 'Sourcable' files 
# i.e. environment variables, aliases, functions, etc.
ALIASES="${SOURCABLES}/.aliases"
ENVS="${SOURCABLES}/.env"
FUNCTIONS="${SOURCABLES}/.functions"
ENV_FILE_GO="${SOURCABLES}/.go_env"

# RC files
# i.e. .zshrc, .conjurrc, etc.
ZSHRC="${RCS}/.zshrc"
CONJURRC="${RCS}/.conjurrc"
NETRC="${RCS}/.netrc"
BASH_PROFILE="${RCS}/.bash_profile"